<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChronometerActivity">
    <TableRow android:gravity="center">
        <TextView android:id="@+id/info_textview"
                  android:layout_span="2"
            android:text="@string/info_textview_text"/>
    </TableRow>
    <TableRow android:gravity="center">
        <TextView android:id="@+id/timer_textview"
            android:text="@string/timer_textview_text"
            android:layout_margin="10dp"/>
        <TextView android:id="@+id/on_off_textview"
            android:text="@string/on_off_textview_text"
            android:layout_margin="10dp"/>
        <TextView android:id="@+id/pause_textview"
            android:text="@string/pause_textview_text"
            android:layout_margin="10dp"/>
    </TableRow>
    <TableRow android:gravity="center">
        <TextView android:id="@+id/first_timer_tv" android:layout_margin="10dp" />
        <Switch android:id="@+id/first_on_off_switch" android:layout_margin="10dp" />
        <Switch android:id="@+id/first_pause_switch" android:layout_margin="10dp"/>
    </TableRow>
    <TableRow android:gravity="center">
        <TextView android:id="@+id/second_timer_tv" android:layout_margin="10dp" />
        <Switch android:id="@+id/second_on_off_switch" android:layout_margin="10dp"/>
        <Switch android:id="@+id/second_pause_switch" android:layout_margin="10dp"/>
    </TableRow >
    <TableRow android:gravity="center">
        <TextView android:id="@+id/third_timer_tv" android:layout_margin="10dp" />
        <Switch android:id="@+id/third_on_off_switch" android:layout_margin="10dp"/>
        <Switch android:id="@+id/third_pause_switch" android:layout_margin="10dp"/>
    </TableRow>
    <TableRow android:gravity="center">
        <TextView android:id="@+id/fourth_timer_tv" android:layout_margin="10dp" />
        <Switch android:id="@+id/fourth_on_off_switch" android:layout_margin="10dp"/>
        <Switch android:id="@+id/fourth_pause_switch" android:layout_margin="10dp"/>
    </TableRow>
    <TableRow android:gravity="center">
        <TextView android:id="@+id/fifth_timer_tv" android:layout_margin="10dp" />
        <Switch android:id="@+id/fifth_on_off_switch" android:layout_margin="10dp"/>
        <Switch android:id="@+id/fifth_pause_switch" android:layout_margin="10dp"/>
    </TableRow>
</TableLayout>